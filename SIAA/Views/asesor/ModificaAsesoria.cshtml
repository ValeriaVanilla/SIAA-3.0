@model SIAA.Models.AsesoriaHorarioViewModel

@{
    Layout = null;

}

<div class="container" style="margin-right: 2cm;">
    <h2>Modificación de asesorías</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Asesoria.IdAsesoria)

    <div class="form-group">
        @Html.LabelFor(model => model.Asesoria.cat_unidad_aprendizaje.NombreUnidadAprendizaje, "Nombre de la asesoría", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Asesoria.cat_unidad_aprendizaje.NombreUnidadAprendizaje, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Asesoria.cat_unidad_aprendizaje.NombreUnidadAprendizaje, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2"><b>CLAVE UNIDAD APRENDIZAJE</b></p>
        <div class="col-md-10">
            @Html.DropDownList("IdUnidadAprendizaje", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdUnidadAprendizaje, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2"><b>LUGAR</b></p>
        <div class="col-md-10">
            @Html.DropDownList("IdLugar", null, htmlAttributes: new { @class = "form-control", @id = "Id_LugarDropDown" })
            @Html.ValidationMessageFor(model => model.IdLugar, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2"><b>HORARIO</b></p>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Horario.Dia, ViewBag.dia as SelectList, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Horario.Dia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-default" />

        </div>
    </div>
</div>
    }

    <div>
        @Html.ActionLink("Regresar", "ConsultaAsesoria")
    </div>
</div>

