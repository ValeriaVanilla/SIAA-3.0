@model IEnumerable<SIAA.reporte>
@{
    Layout = "~/Views/Shared/Layout_Asesor.cshtml";
}

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/Content/Consultas.css">
    <script src="~/Scripts/Consultas.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="~/Scripts/busquedas.js"></script>
    <script src="~/Scripts/Modifica.js"></script>

</head>
<div class="container" style="margin-right: 6cm;">
    <body>
        <!--INICIO DE TABS -->
        <div class="card-body">
            <ul class="nav nav-tabs pestania">
                <li class="nav-item">
                    <a class="navbar-link" onclick="openTab('registro')" href="@Url.Action("ReporteAsesor", "asesor")">Registro Reportes</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" onclick="openTab('consulta')" href="@Url.Action("ConsultaReporte", "asesor")">Consulta Reporte</a>

            </ul>
        </div>
        <!--FIN DE TABS -->

        <div class="tab-content">
            <div class="tab-pane" id="consulta" role="tabpanel" aria-labelledby="consulta-tab">
                <h2><b>CONSULTA DE REPORTES</b></h2>


                <div class="search-container">
                    <input class="form-control" id="myInput" type="text" placeholder="Buscar.." onkeyup="filtrarTabla()">
                </div>
                <table id="tabla" class="table table-striped" style="width: 130%">
                    <!-- Agrega los titulos de la tablas-->
                    <thead class="encabezado">
                        <tr>
                            <th>NÚMERO DE REPORTE</th>
                            <th>NÚMERO DE ASESORÍA</th>
                            <th>FECHA</th>
                            <th>DURACIÓN</th>
                            <th>NÚMERO DE TEMA VISTO</th>
                            <th>COMENTARIOS</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {

                        <tbody id="myTable" class="searchable-table">
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdReporte)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.asesoria.cat_unidad_aprendizaje.NombreUnidadAprendizaje)

                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Duracion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.cat_temas.NombreTema)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Comentarios)
                                </td>
                            </tr>

                        </tbody>
                    }

                </table>
            </div>
            <!-- Modal de edición -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title"></h4>
                        </div>
                        <div class="modal-body" id="modalContent">
                            <!-- Contenido de edición se cargará aquí -->
                        </div>
                    </div>
                </div>
            </div>
            <script src="~/Scripts/menuConsultaAsesores.js"></script>
            <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
        </div>

    </body>
</div>

