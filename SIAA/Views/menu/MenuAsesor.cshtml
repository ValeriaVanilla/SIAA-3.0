@model asesor

@{
    Layout = "~/Views/Shared/Layout_Asesor.cshtml";
}

<link rel="stylesheet" href="~/Content/menuEncargadoStyle.css">

<!--INICIO BIENVENIDA -->
<div class="jumbotron">
    <p>
        <center> <h2>  <b> ¡Bienvenido @Html.DisplayFor(model => model.usuario.Nombre) !</b> </h2></center>
    </p>

</div>
<!--FIN BIENVENIDA-->
<!--INICIO CARD 1-->
<div class="contenedor-menu">
    <div class="card-menu-encargado">
        <a href="@Url.Action("RegistroAsesoria", "asesor")" class="enlace-tarjeta">
            <div class="overlay">
                <h2 class="titulo">Asesorías</h2>
            </div>
            <img src="~/Resources/Menu_encargado/asesorias-encargado.jpg" alt="cheetah" />
            <div class="tooltip">
                <p>Texto del Tooltip</p>
            </div>
        </a>
    </div>


    <!--FIN CARD 1-->
    <!--INICIO CARD 2-->
    <div class="card-menu-encargado">
        <a href="@Url.Action("SolicitudesAsesoria", "asesor")" class="enlace-tarjeta">
            <div class="overlay">
                <h2 class="titulo">Solicitudes</h2>
            </div>
            <img src="~/Resources/Menu_Asesor/solicitar.jpg" alt="cheetah" />
        </a>
    </div>

    <!--FIN CARD 2-->
    <!--INICIO CARD 3-->
    <div class="card-menu-encargado">
        <a href="@Url.Action("ReporteAsesor", "asesor")" class="enlace-tarjeta">
            <div class="overlay">
                <h2 class="titulo">Reportes</h2>
            </div>
            <img src="~/Resources/Menu_Asesor/reporte_asesor.jpg" alt="cheetah" />
    </div>

    <!--FIN CARD 3-->
</div>
